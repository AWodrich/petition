<h1 id="sigHead">Signature Page</h1>
<img id="signPetitionPic" src="/public/images/euparliament.jpg" alt="">
<div id="template">
    <form class="user" action='/petition' method="post">
        <input class="inputPetition" id="first" type="text" placeholder="Enter first name" name="first" value="{{first}}">
        <input class="inputPetition" id="last" type="text" placeholder="Enter last name" name="last" value="{{last}}">
        <input class="inputPetition" type="hidden" name="img">
        <input class="input" type="hidden" name="_csrf" value="{{csrfToken}}">
        <button id="submit">Submit</button>
    </form>
    <p id="sign">Please sign here:</p>
    <canvas id="canvas" width="500" height="150"></canvas>
</div>
